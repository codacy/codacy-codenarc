<?xml version="1.0" encoding="UTF-8"?>

<module name="root">
    <!-- To ignore config files from analysis -->
    <module name="BeforeExecutionExclusionFileFilter">
        <!-- value can be a regex matching files to ignore -->
        <property name="fileNamePattern" value="\.codenarcrc"/>
    </module>
    <module name="Indentation">
        <property name="spacesPerIndentLevel" value="4"/>
    </module>
    <module name="ConsecutiveBlankLines" />
    <module name="MissingBlankLineAfterPackage" />
    <module name="UnnecessarySemicolon" />
    <module name="AssignmentInConditional" />
    <module name="MisorderedStaticImports" />
</module>
